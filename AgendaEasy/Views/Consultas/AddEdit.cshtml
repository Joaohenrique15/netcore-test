@model Consulta
@{
    ViewBag.Title = $"{(Model.Id == 0 ? "Adicionar" : "Editar")} Agendamento";
}

<h2>@ViewBag.Title</h2>

<form method="post" class="w-75">

    <div class="form-group">
        <label for="txtNome">Data e Hora:</label>
        @Html.TextBoxFor(m => m.DataHora, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "datetime-local" })
        <small>
            @Html.ValidationMessageFor(m => m.DataHora, null, new { @class = "text-danger" })
        </small>
    </div>

    <div class="form-group">
        <label>Prontuario:</label>
        @Html.DropDownListFor(m => m.ProntuarioId,
             new SelectList(ViewBag.Prontuarios, "Id", "Nome"),
             "Selecione",
             new { @class = "form-control" }
             )
        <small>
            @Html.ValidationMessageFor(m => m.ProntuarioId, null, new { @class = "text-danger" })
        </small>
    </div>

    <div class="form-group">
        <label>Local:</label>
        @Html.DropDownListFor(m => m.Local,
                            new SelectList(Enum.GetValues(typeof(Unidades))),
                            "Selecionar Unidades",
                            new { @class = "form-control" }
                            )
        <small>
            @Html.ValidationMessageFor(m => m.Local, null, new { @class = "text-danger" })
        </small>
    </div>

    <div class="form-group">
        <label>Especialidade:</label>
        @Html.DropDownListFor(m => m.EspecialidadeId,
             new SelectList(ViewBag.Especialidades, "Id", "Descricao"),
             "Selecione",
             new { @class = "form-control" }
             )
        <small>
            @Html.ValidationMessageFor(m => m.EspecialidadeId, null, new { @class = "text-danger" })
        </small>
    </div>

    <div class="form-group">
        <label>Médico:</label>
        @Html.DropDownListFor(m => m.MedicoId,
             new SelectList(ViewBag.Medicos, "Id", "Nome"),
             "Selecione",
             new { @class = "form-control" }
             )
        <small>
            @Html.ValidationMessageFor(m => m.MedicoId, null, new { @class = "text-danger" })
        </small>
    </div>

    <div>
        @Html.ValidationSummary(true)
    </div>

    <div class="form-group">
        <button class="btn btn-outline-secondary">Salvar</button>
        <a class="btn btn-outline-info" href="@Url.Action("Index")">Cancelar</a>
    </div>
</form>


@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
}