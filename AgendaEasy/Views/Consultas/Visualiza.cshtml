@model Consulta

@{
    ViewData["Title"] = "Visualiza";
}

<h1>Detalhes da Consulta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data e Hora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataHora)
        </dd>
        <dt class="col-sm-2">
            Local
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class="col-sm-2">
            Especialidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidade.Descricao)
        </dd>
        <dt class="col-sm-2">
            Doutor(a)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicos.Nome)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-outline-info" asp-action="Index">Voltar</a>
</div>
