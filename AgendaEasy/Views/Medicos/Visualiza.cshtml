@model Medico

@{
    ViewData["Title"] = "Visualiza";
}

<h1>Detalhes do Médico</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            CRM
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CRM)
        </dd>
        <dt class="col-sm-2">
            Especialidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidade.Descricao)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-outline-info" asp-action="Index">Voltar</a>
</div>
